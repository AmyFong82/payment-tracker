<% if logged_in? %>

	<% if @bills.empty? %>
	<h2 id="bill_title_1">Bills</h2>
	<table id="monthly_bill_table" class="table table-striped table-bordered">
	  <thead class="thead-dark">
		<tr>
			<th>Company</th>
			<th>Amount</th>
			<th>Due Date</th>
			<th class="text-center">Paid?</th>
			<th class="text-center">Edit/Delete</th>
		</tr>
	  </thead>
		<tr>
	  	<td>Add a bill to being payment tracking.</td>
	  	<td></td>
	  	<td></td>
	  	<td></td>
	  	<td></td>
	  </tr>
	</table>
	<% end %>


	<% if !@monthly_bills.empty? %>
	<h2 id="monthly-bill-title">Monthly Bills</h2>
	<table id="monthly_bill_table" class="table table-striped table-bordered">
	  <thead class="thead-dark">
		<tr>
			<th>Company</th>
			<th>Amount</th>
			<th>Due Date</th>
			<th class="text-center">Paid?</th>
			<th class="text-center">Edit/Delete</th>
		</tr>
	  </thead>
	  	<tr>
  		<% @monthly_bills.each do |b|  %>
			<td><%= b.company_name %></td>
			<td>$ <%= b.amount %></td>
			<td><%= b.due_date %></td>
			<td class="text-center">
				<form action="/bills/<%= b.id %>" method="post">
					<input type="hidden" id="hidden" name="_method" value="patch">
						<input class="checkbox" id="toggle" type="checkbox" name="paid" value = "1" <%= 'checked' if b.paid == true %> <%= 'disabled' if b.paid == true %>>
						<button type="submit" class="btn btn-warning btn-sm">Save</button>
				</form>
			</td>		
			<td class="text-center">
					<form action="/bills/<%= b.id %>" method="post">
						<input type="hidden" id="hidden" name="_method" value="delete">
						<a href="/bills/<%= b.id %>/edit"><i class="fas fa-pencil-alt"></i></a>&nbsp;
							<button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-trash-alt"></i></button>
					</form>
			</td>
	  	</tr>
	 	<% end %>
	</table>
	<% end %>


