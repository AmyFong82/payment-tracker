<% if logged_in? %>

	<% if @bills.empty? %>
		<h2>Bills</h2>
	<% elsif !@monthly_bills.empty? %>
		<h2>Monthly Bills</h2>
	<% end %>
	<table class="table table-striped">
	  <thead class="thead-dark">
		<tr>
			<th>Company</th>
			<th>Amount</th>
			<th>Due Date</th>
			<th class="text-center">Paid?</th>
			<th class="text-center">Edit/Delete</th>
		</tr>
	  </thead>

	  <tr>
		<% if @bills.empty? %>
		  	<td>Add a bill to being payment tracking.</td>
		  	<td></td>
		  	<td></td>
		  	<td></td>
		  	<td></td>
	  	<% elsif !@monthly_bills.empty? %>
	  		<% @monthly_bills.each do |b|  %>
			<td><%= b.company_name %></td>
			<td>$ <%= b.amount %></td>
			<td><%= b.due_date %></td>
			<td class="text-center"><input type="checkbox" name="paid" value = "1" <%= 'checked' if b.paid == true %>></td>
			<td class="text-center">
				<form action="/bills/<%= b.id %>" method="post">
					<input type="hidden" id="hidden" name="_method" value="delete">
					<a href="/bills/<%= b.id %>/edit"><i class="fas fa-pencil-alt"></i></a>&nbsp;
						<button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-trash-alt"></i></button>
				</form>
			</td>
	  </tr>
	  		<% end %>
		<% end %>
	</table>

	<a class="btn btn-sm btn-primary" href="/bills/new">Add Bill</a>
<% else %>
	<p>Please <a href="/login">Login</a> to view your bills.</p>
<% end %>